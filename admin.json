{
  "info": {
    "name": "LaporPak API - Admin Endpoints",
    "description": "API Documentation untuk Admin dan Petugas",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin - Reports Management",
      "item": [
        {
          "name": "Get All Reports (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/reports?status=all&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports"],
              "query": [
                {
                  "key": "status",
                  "value": "all",
                  "description": "all, pending, on_hold, in_progress, done"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Reports by Date (Kalender)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/reports/by-date?month=11&year=2025",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports", "by-date"],
              "query": [
                {
                  "key": "month",
                  "value": "11",
                  "description": "1-12"
                },
                {
                  "key": "year",
                  "value": "2025"
                }
              ]
            }
          }
        },
        {
          "name": "Get Reports Need Approval",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/reports/need-approval?tab=semua",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports", "need-approval"],
              "query": [
                {
                  "key": "tab",
                  "value": "semua",
                  "description": "semua, laporan, dalam_proses, selesai"
                }
              ]
            }
          }
        },
        {
          "name": "Get Dashboard Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/reports/dashboard-stats",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports", "dashboard-stats"]
            }
          }
        },
        {
          "name": "Approve Report",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "approved",
                  "value": "true",
                  "type": "text",
                  "description": "true = approve, false = reject"
                },
                {
                  "key": "reason",
                  "value": "Tidak sesuai kriteria",
                  "type": "text",
                  "description": "Required jika approved = false"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/admin/reports/1/approve",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports", "1", "approve"]
            }
          }
        },
        {
          "name": "Assign to Petugas",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "petugas_id",
                  "value": "2",
                  "type": "text",
                  "description": "ID petugas yang akan ditugaskan"
                },
                {
                  "key": "notes",
                  "value": "Segera tangani laporan ini",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/admin/reports/1/assign",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports", "1", "assign"]
            }
          }
        }
      ]
    },

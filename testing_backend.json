              "raw": "{{base_url}}/api/rt/reports/approval?tab=laporan",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports", "approval"],
              "query": [
                {
                  "key": "tab",
                  "value": "laporan",
                  "description": "Hanya laporan pending"
                }
              ]
            }
          }
        },
        {
          "name": "Get Reports for Approval (Tab: Dalam Proses)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/rt/reports/approval?tab=dalam_proses",

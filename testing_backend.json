          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/rt/reports/approval?tab=semua&per_page=10",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports", "approval"],
              "query": [
                {
                  "key": "tab",
                  "value": "semua",
                  "description": "semua, laporan, dalam_proses, selesai"
                },
                {
                  "key": "per_page",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Reports for Approval (Tab: Laporan)",
          "request": {
            "method": "GET",

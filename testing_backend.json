{
  "info": {
    "name": "LaporPak API - RT Endpoints",
    "description": "API Documentation untuk RT (Rukun Tetangga)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "RT - Authentication",
      "item": [
        {
          "name": "Login RT",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "email",
                  "value": "rt@laporpak.com",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "password",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get RT Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "RT - Reports Management",
      "item": [
        {
          "name": "Get All Reports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/rt/reports?status=all&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports"],
              "query": [
                {
                  "key": "status",
                  "value": "all",
                  "description": "all, pending, on_hold, in_progress, done"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Reports by Date (Kalender)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/rt/reports/by-date?month=11&year=2025",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports", "by-date"],
              "query": [
                {
                  "key": "month",
                  "value": "11",
                  "description": "1-12"
                },
                {
                  "key": "year",
                  "value": "2025"
                }
              ]
            }
          }
        },
        {
          "name": "Get Dashboard Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",

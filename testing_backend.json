        },
        {
          "name": "Get Reports for Approval (Tab: Selesai)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/rt/reports/approval?tab=selesai",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports", "approval"],
              "query": [
                {
                  "key": "tab",
                  "value": "selesai"
                }
              ]
            }
          }
        },
        {
          "name": "Get Approval Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/rt/reports/approval/1",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports", "approval", "1"]
            }
          }
        },
        {
          "name": "Konfirmasi Report (Tombol Ungu)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/rt/reports/1/confirm",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports", "1", "confirm"]
            },
            "description": "Mengubah status dari pending ke in_progress"
          }
        },
        {
          "name": "Selesaikan Report (Tombol Hijau)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "notes",
                  "value": "Laporan sudah selesai ditangani",
                  "type": "text",
                  "description": "Optional notes"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/rt/reports/1/complete",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports", "1", "complete"]
            },
            "description": "Mengubah status menjadi done"
          }
        },
        {
          "name": "Update Status Manual",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{rt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "status",
                  "value": "on_hold",
                  "type": "text",
                  "description": "pending, on_hold, in_progress, done"
                },
                {
                  "key": "notes",
                  "value": "Menunggu informasi lebih lanjut",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/rt/reports/1/update-status",
              "host": ["{{base_url}}"],
              "path": ["api", "rt", "reports", "1", "update-status"]
            }
          }
